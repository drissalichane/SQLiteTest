<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Form Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Etudiant"

                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Name Input -->
                <EditText
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Nom"
                    android:textColorHint="#d1b6b4"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    android:textSize="16sp" />

                <!-- Surname Input -->
                <EditText
                    android:id="@+id/prenom"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_background"
                    android:hint="PrÃ©nom"
                    android:textColorHint="#d1b6b4"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    android:textSize="16sp" />

                <!-- Date Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/selected_date"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="SÃ©lectionner une date"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/pick_date"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/button_background"
                        android:text="ðŸ“…"
                        android:textColor="#fff" />
                </LinearLayout>

                <!-- Image Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/selected_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/image_background"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/pick_image"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/button_background"
                        android:text="SÃ©lectionner une image"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Add Button -->
                <Button
                    android:id="@+id/bn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_background"
                    android:text="Ajouter Ã‰tudiant"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Search Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Rechercher Ã‰tudiant"

                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_background"
                    android:hint="ID de l'Ã©tudiant"
                    android:textColorHint="#d1b6b4"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/load"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"
                    android:text="Rechercher"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:padding="12dp"
                    android:text="RÃ©sultats affichÃ©s ici..."
                    android:textColor="#333"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- View Students Button -->
        <Button
            android:id="@+id/view_students"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="Voir Tous les Ã‰tudiants"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>